<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Editar Promoção</title>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/style/style.css" />
</head>
<body>
  <div class="container mt-4">

    <div class="text-left mb-4">
      <img src="../img/logoRes.png" alt="Logo Sabor Caseiro" style="width: 200px;">
    </div>

    <div class="row justify-content-center">
      <div class="col-md-8">
        <h2 class="mb-4 text-center">Editar Promoção</h2>
        <form action="/atualizarPromocao" method="post" enctype="multipart/form-data">
          
          <!-- Campo oculto para enviar o ID da promoção -->
          <input type="hidden" name="id" value="<%= promocao.id %>">

          <div class="row">
            <!-- Coluna da foto -->
            <div class="col-md-4 text-center mb-4">
              <% if (promocao.foto) { %>
                <img id="previewFoto"
                     src="/uploads/<%= promocao.foto %>"
                     alt="Foto da promoção"
                     style="width:150px;height:150px;border-radius:10px;object-fit:cover;margin-bottom:10px;">
              <% } else { %>
                <img id="previewFoto"
                     src="/img/default.png"
                     alt="Foto da promoção"
                     style="width:150px;height:150px;border-radius:10px;object-fit:cover;margin-bottom:10px;">
              <% } %>

              <input type="file" id="foto" name="foto" accept="image/*" class="form-control-file mb-3">
              <small class="form-text text-muted">
                <% if (promocao.foto) { %>
                  Foto atual: <%= promocao.foto %>
                <% } else { %>
                  Nenhuma foto cadastrada
                <% } %>
              </small>
            </div>

            <!-- Coluna das informações -->
            <div class="col-md-8">
              <div class="form-group">
                <label>Nome da Promoção</label>
                <input name="nome" type="text" class="form-control" value="<%= promocao.nome %>" required>
              </div>

              <div class="form-group">
                <label>Descrição</label>
                <input type="text" name="descricao" class="form-control" value="<%= promocao.descricao %>" required>
              </div>

              <div class="form-group">
                <label>Quantidade de refeições</label>
                <input type="number" name="qtd_refeicao" class="form-control" min="0" value="<%= promocao.qtd_refeicao || 0 %>">
              </div>

              <div class="form-group">
                <label>Tipo de desconto:</label>
                <select name="tipo_desconto" class="form-control" required>
                  <option value="porcentual" <%= promocao.tipo_desconto === 'porcentual' ? 'selected' : '' %>>Desconto porcentual (%)</option>
                  <option value="fixo" <%= promocao.tipo_desconto === 'fixo' ? 'selected' : '' %>>Fixo (R$)</option>
                  <option value="metaCompras" <%= promocao.tipo_desconto === 'metaCompras' ? 'selected' : '' %>>Gastando R$ ganhe mais 1</option>
                </select>
              </div>

              <div class="form-group">
                <label>Valor do desconto</label>
                <input type="number" name="valor" class="form-control" step="0.01" value="<%= promocao.valor || 0 %>">
              </div>

              <div class="form-group">
                <label>Data de início:</label>
                <input type="date" name="data_inicio" class="form-control" 
                       value="<%= promocao.data_inicio ? new Date(promocao.data_inicio).toISOString().split('T')[0] : '' %>">
              </div>

              <div class="form-group">
                <label>Data de término:</label>
                <input type="date" name="data_fim" class="form-control" 
                       value="<%= promocao.data_fim ? new Date(promocao.data_fim).toISOString().split('T')[0] : '' %>">
              </div>

              <div class="form-group">
                <div class="alert alert-info">
                  <small>
                    <strong>ID da Promoção:</strong> <%= promocao.id %><br>
                    <strong>Data de Criação:</strong> <%= new Date(promocao.createdAt).toLocaleDateString('pt-BR') %>
                  </small>
                </div>
              </div>

              <div class="d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-success">Salvar Alterações</button>
                <button type="button" class="btn btn-secondary" onclick="cancelar()">Cancelar</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Script para preview da foto -->
  <script>
    // Mostra a prévia da foto antes do envio
    const fotoInput = document.getElementById("foto");
    const preview = document.getElementById("previewFoto");

    fotoInput.addEventListener("change", function() {
      const file = this.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.src = e.target.result;
        }
        reader.readAsDataURL(file);
      }
    });
    
    function cancelar() {
    window.location.href = "/listarPromocoes"; // volta para os filtros
  }
  </script>
</body>
</html>