<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Criar Promoção</title>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/style/style.css" />
</head>
<body>
  <div class="container mt-4">

    <div class="text-left mb-4">
      <img src="../img/logoRes.png" alt="Logo Sabor Caseiro" style="width: 200px;">
    </div>

    <div class="row justify-content-center">
      <div class="col-md-8">
        <h2 class="mb-4 text-center">Criar Promoção</h2>

        <form action="/cadastrarPromocao" method="post" enctype="multipart/form-data">
          
          <div class="row">
            <!-- Coluna da foto -->
            <div class="col-md-4 text-center mb-4">
              <img id="previewFoto"
                   src="/img/default.png"
                   alt="Foto da promoção"
                   style="width:150px;height:150px;border-radius:10px;object-fit:cover;margin-bottom:10px;">

              <input type="file" id="foto" name="foto" accept="image/*" class="form-control-file mb-3">
            </div>

            <!-- Coluna das informações -->
            <div class="col-md-8">
              <div class="form-group">
                <label>Nome da Promoção</label>
                <input name="nome" type="text" class="form-control" required>
              </div>

              <div class="form-group">
                <label>Descrição</label>
                <input type="text" name="descricao" class="form-control" required>
              </div>

              <div class="form-group">
                <label>Quantidade de refeições</label>
                <input type="number" name="qtd_refeicao" class="form-control" min="0" value="0">
              </div>

              <div class="form-group">
                <label>Tipo de desconto:</label>
                <select name="tipo_desconto" class="form-control" required>
                  <option value="porcentual">Desconto porcentual (%)</option>
                  <option value="fixo">Fixo (R$)</option>
                  <option value="metaCompras">Gastando R$ ganhe mais 1</option>
                </select>
              </div>

              <div class="form-group">
                <label>Valor do desconto</label>
                <input type="number" name="valor" class="form-control" step="0.01" value="0">
              </div>

              <div class="form-group">
                <label>Data de início:</label>
                <input type="date" name="data_inicio" class="form-control">
              </div>

              <div class="form-group">
                <label>Data de término:</label>
                <input type="date" name="data_fim" class="form-control">
              </div>

              <button type="submit" class="btn btn-success btn-block mt-3">Salvar Promoção</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Script para preview da foto -->
  <script>
    // Mostra a prévia da foto antes do envio
    const fotoInput = document.getElementById("foto");
    const preview = document.getElementById("previewFoto");

    fotoInput.addEventListener("change", function() {
      const file = this.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.src = e.target.result;
        }
        reader.readAsDataURL(file);
      }
    });
  </script>
</body>
</html>