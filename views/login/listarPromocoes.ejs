<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>Promoções Cadastradas</title>
  <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="/css/style3.css" />
</head>
<body>
  <div class="tela-funcionarios">
    <!-- Cabeçalho -->
    <div class="cabecalho-funcionarios">
      <div class="logo-area">
        <img src="/images/logoRes.png" alt="Logo" />
      </div>
      <h1 class="titulo-funcionarios">Promoções</h1>
    </div>

    <!-- Formulário de busca -->
    <div class="box-formulario">
      <form method="get" action="/login/promocoes/buscar">
        <input
          type="number"
          name="id"
          class="input100"
          placeholder="Buscar por ID"
          value="<%= typeof id !== 'undefined' ? id : '' %>"
        />
        <input
          type="text"
          name="nome"
          class="input100"
          placeholder="Buscar por nome"
          value="<%= typeof nome !== 'undefined' ? nome : '' %>"
        />

        <div class="btn-group-form">
          <button type="submit" class="login100-form-btn">
            <i class="fa fa-search"></i> Buscar
          </button>
          <button
            type="button"
            class="login100-form-btnlimpar-btn"
            onclick="window.location.href='/listarPromocoes'"
          >
            <i class="fa fa-eraser"></i> Limpar
          </button>
        </div>
      </form>
    </div>

    <!-- Tabela de promoções -->
    <div class="box-tabela">
      <% if (typeof msg !== 'undefined' && msg) { %>
        <% if (msgType === 'success') { %>
          <div class="msg-sucesso"><%= msg %></div>
        <% } else { %>
          <div class="msg-erro"><%= msg %></div>
        <% } %>
      <% } %>

      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Foto</th>
            <th>Quantidade</th>
            <th>Tipo Desconto</th>
            <th>Valor</th>
            <th>Data Início</th>
            <th>Data Fim</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% promocoes.forEach(promo => { %>
            <tr>
              <td><%= promo.id %></td>
              <td><%= promo.nome %></td>
              <td><%= promo.descricao %></td>
              <td>
                <% if (promo.foto) { %>
                  <img src="/uploads/<%= promo.foto %>" class="rounded" style="width:50px; height:50px; object-fit:cover;">
                <% } else { %>
                  —
                <% } %>
              </td>
              <td><%= promo.qtd_refeicao %></td>
              <td><%= promo.tipo_desconto %></td>
              <td>R$ <%= promo.valor %></td>
              <td><%= new Date(promo.data_inicio).toLocaleDateString('pt-BR') %></td>
              <td><%= promo.data_fim ? new Date(promo.data_fim).toLocaleDateString('pt-BR') : '—' %></td>
              <td>
                <!-- Botão Editar -->
                <a href="/login/telaEditarPromocao/<%= promo.id %>/editar" class="btn-acao btn-editar">
                  <i class="fa fa-pencil"></i> Editar
                </a>

                <!-- Botão Excluir dentro de form -->
                <form action="/promocoes/excluir/<%= promo.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn-acao btn-excluir" onclick="return confirm('Deseja realmente excluir esta promoção?');">
                    <i class="fa fa-trash"></i> Excluir
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="text-center p-t-12">
        <a class="btn-voltar" href="/meuPerfil"> Voltar </a>
      </div>
    </div>
  </div>
</body>
</html>