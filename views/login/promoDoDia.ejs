<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Promo√ß√£o do Dia</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style5.css" />
  
  

</head>
<body>

<!-- ‚≠ê NAVBAR IGUAL √Ä DA HOME -->
<nav class="navbar navbar-expand-lg navbar-custom fixed-top">
  <div class="container">
    <a class="navbar-brand" href="/home">
      <img src="/images/logoRes.png" alt="Logo do Sistema">
    </a>

    <span class="nav-text">Promo√ß√£o do Dia</span>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSite">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSite">

      <ul class="navbar-nav">
        <li class="nav-item mr-3">
          <span class="nav-text"><%= username %></span>
        </li>

        <li class="nav-item">
          <a href="/logout" class="btn btn-logout">Sair</a>
        </li>
      </ul>

    </div>
  </div>
</nav>


<!-- ‚≠ê CONTE√öDO -->
<div class="container">

  <h1 class="titulo-promocoes text-center">üåü Promo√ß√£o do Dia üåü</h1>

  <% if (promocoes && promocoes.length > 0) { %>
    <div class="row">
      <% promocoes.forEach(promo => { %>
        <div class="col-md-6 mb-4">
          <div class="card">

            <% if (promo.foto) { %>
              <img id="previewFoto" src="<%= promo.foto ? '/images/' + promo.foto : '/images/default.png' %>" class="card-img-top" style="height:200px; object-fit:cover;">
            <% } %>
            
         

            <div class="card-body">
              <h5 class="card-title"><%= promo.nome %></h5>
              <p><%= promo.descricao %></p>
              <p><strong>Quantidade:</strong> <%= promo.qtd_refeicao %></p>
              <p><strong>Desconto:</strong> <%= promo.tipo_desconto %></p>
              <p><strong>Valor:</strong> R$ <%= promo.valor %></p>

              <p><strong>V√°lido de:</strong>
                <%= new Date(promo.data_inicio).toLocaleDateString('pt-BR') %> at√©
                <%= promo.data_fim ? new Date(promo.data_fim).toLocaleDateString('pt-BR') : '‚Äî' %>
              </p>
            </div>

          </div>
        </div>
      <% }) %>
    </div>

  <% } else { %>

    <div class="alert alert-info text-center">
      Nenhuma promo√ß√£o dispon√≠vel no momento.
    </div>

  <% } %>

  <div class="text-center mt-4">
    <a href="/home" class="btn-voltar">Voltar</a>
  </div>

</div>

</body>
<!-- Script para preview da foto -->
  <script>
    // Mostra a pr√©via da foto antes do envio
    const fotoInput = document.getElementById("foto");
    const preview = document.getElementById("previewFoto");

    fotoInput.addEventListener("change", function() {
      const file = this.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.src = e.target.result;
        }
        reader.readAsDataURL(file);
      }
    });
  </script>
</html>
