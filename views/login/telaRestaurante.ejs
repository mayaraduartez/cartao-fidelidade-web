<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Restaurantes - Sabor Caseiro</title>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style/style4.css">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Playfair+Display&display=swap" rel="stylesheet">

  <style>
    body.fundo-degrade {
      font-family: 'Open Sans', sans-serif;
      background: linear-gradient(-135deg, #ffe016, #f94904);
      min-height: 100vh;
      padding-bottom: 40px;
    }
    h1, h2 {
      font-family: 'Playfair Display', serif;
      color: #fff;
    }
    .card-restaurante {
      background-color: rgba(255, 255, 255, 0.95);
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      padding: 20px;
      margin-bottom: 20px;
    }
    .list-group-item {
      background-color: #fff;
      border-radius: 5px;
      margin-bottom: 5px;
    }
    .list-group-item:hover {
      background-color: #ffe8a1;
    }
    .btn-block {
      font-weight: bold;
    }
    .modal-content {
      border-radius: 10px;
    }
    label {
      font-weight: bold;
    }
  </style>
</head>

<body class="fundo-degrade">
  <div class="container mt-4">
    <div class="text-center mb-4">
      <img src="../images/logoRes.png" alt="Logo Sabor Caseiro" style="width: 100px; height: auto;">
      <h1 class="mt-2">Restaurantes - Sabor Caseiro</h1>
    </div>

    <div class="row">
      <!-- LADO ESQUERDO: LISTAR / EDITAR / EXCLUIR -->
      <div class="col-md-6 mb-4">
        <div class="card-restaurante h-100">
          <h2 class="h5">Unidades Atuais</h2>

          <ul class="list-group mb-3">
            <% restaurantes.forEach(rest => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                üìç <%= rest.endereco %> - <%= rest.nome %>
                <div>
                  <button class="btn btn-warning btn-sm mr-1" data-toggle="modal" data-target="#editarModal<%= rest.id %>">Editar</button>
                  <form action="/restaurantes/<%= rest.id %>/excluir" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                  </form>
                </div>
              </li>

              <!-- Modal de edi√ß√£o -->
              <div class="modal fade" id="editarModal<%= rest.id %>" tabindex="-1" role="dialog" aria-labelledby="editarModalLabel<%= rest.id %>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <form action="/restaurantes/<%= rest.id %>/editar" method="POST">
                      <div class="modal-header">
                        <h5 class="modal-title" id="editarModalLabel<%= rest.id %>">Editar Restaurante</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <div class="form-group">
                          <label for="nome<%= rest.id %>">Nome:</label>
                          <input type="text" class="form-control" id="nome<%= rest.id %>" name="nome" value="<%= rest.nome %>" required>
                        </div>
                        <div class="form-group">
                          <label for="endereco<%= rest.id %>">Endere√ßo:</label>
                          <input type="text" class="form-control" id="endereco<%= rest.id %>" name="endereco" value="<%= rest.endereco %>" required>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-warning">Salvar Altera√ß√µes</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            <% }) %>
          </ul>

          <a href="/admin/listarClientes" class="btn btn-info btn-block mt-2">Ver lista de clientes</a>
        </div>
      </div>

      <!-- LADO DIREITO: CADASTRAR NOVA UNIDADE -->
      <div class="col-md-6 mb-4">
        <div class="card-restaurante h-100">
          <h2 class="h5">Cadastrar Nova Unidade</h2>
          <form action="/restaurantes" method="POST">
            <div class="form-group">
              <label for="nome">Nome da Unidade:</label>
              <input type="text" id="nome" name="nome" class="form-control" placeholder="Ex: Unidade Leste" required>
            </div>
            <div class="form-group">
              <label for="endereco">Endere√ßo:</label>
              <input type="text" id="endereco" name="endereco" class="form-control" placeholder="Ex: Rua Tal, 999" required>
            </div>
            <button type="submit" class="btn btn-success btn-block">Cadastrar Unidade</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts Bootstrap -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>





