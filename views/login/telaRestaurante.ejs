<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Unidades - Sabor Caseiro</title>

  <!-- Bootstrap 4.1.3 -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
    integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
    integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
    crossorigin="anonymous"></script>

  <!-- Estilos personalizados -->
  <link rel="stylesheet" href="/style/style2.css">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Playfair+Display&display=swap" rel="stylesheet">
</head>

<body class="fundo-amarelo">
  <div class="container mt-4">
    <div class="text-center mb-4">
      <img src="../img/logoRes.png" alt="Logo Sabor Caseiro" style="width: 100px; height: auto;">
      <h1 class="mt-2">Restaurantes - Sabor Caseiro</h1>
    </div>

    <div class="row">
      <!-- Coluna esquerda -->
      <div class="col-md-6 mb-4">
        <div class="p-3 h-100">
          <h2 class="h5">Unidades Atuais</h2>
          <ul id="unitList" class="list-group mb-3">
            <li class="list-group-item">üìç Av. Pres. Vargas, 799 - Get√∫lio Vargas</li>
            <li class="list-group-item">üìç Av. Tupi Silveira, 1890 - Centro</li>
            <li class="list-group-item">üìç R. Ven√¢ncio A√≠res, 41 - Centro</li>
          </ul>

          <h2 class="h5">Selecionar Unidade</h2>
          <select id="unitSelect" class="custom-select mb-3">
            <option value="0">Av. Pres. Vargas, 799 - Get√∫lio Vargas</option>
            <option value="1">Av. Tupi Silveira, 1890 - Centro</option>
            <option value="2">R. Ven√¢ncio A√≠res, 41 - Centro</option>
          </select>

          <div class="d-flex">
  <button class="btn btn-warning w-50 mr-2" onclick="editarUnidade()">Editar</button>
  <button class="btn btn-danger w-50" onclick="excluirUnidade()">Excluir</button>
</div>

        </div>
      </div>

      <!-- Coluna direita -->
      <div class="col-md-6 mb-4">
        <div class="p-3 h-100">
          <h2 class="h5">Cadastrar Nova Unidade</h2>
          <form onsubmit="cadastrarUnidade(event)">
            <div class="form-group">
              <label for="nome">Nome da Unidade:</label>
              <input type="text" id="nome" name="nome" class="form-control" placeholder="Ex: Unidade Leste">
            </div>

            <div class="form-group">
              <label for="endereco">Endere√ßo:</label>
              <input type="text" id="endereco" name="endereco" class="form-control" placeholder="Ex: Rua Tal, 999">
            </div>

            <button type="submit" class="btn btn-success btn-block">Cadastrar Unidade</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    function atualizarSelect() {
      const lista = document.getElementById("unitList");
      const select = document.getElementById("unitSelect");
      select.innerHTML = "";
      Array.from(lista.children).forEach((li, index) => {
        const texto = li.textContent.replace("üìç ", "");
        const option = document.createElement("option");
        option.value = index;
        option.textContent = texto;
        select.appendChild(option);
      });
    }

    function editarUnidade() {
      const select = document.getElementById("unitSelect");
      const index = select.value;
      const lista = document.getElementById("unitList");
      const item = lista.children[index];
      const novoEndereco = prompt("Novo endere√ßo:", item.textContent.replace("üìç ", ""));
      if (novoEndereco) {
        item.textContent = "üìç " + novoEndereco;
        atualizarSelect();
      }
    }

    function excluirUnidade() {
      const select = document.getElementById("unitSelect");
      const index = select.value;
      const lista = document.getElementById("unitList");
      const item = lista.children[index];
      if (item) {
        item.remove();
        atualizarSelect();
      }
    }

    function cadastrarUnidade(event) {
      event.preventDefault();
      const nome = document.getElementById("nome").value.trim();
      const endereco = document.getElementById("endereco").value.trim();
      if (nome && endereco) {
        const lista = document.getElementById("unitList");
        const li = document.createElement("li");
        li.className = "list-group-item";
        li.textContent = "üìç " + endereco;
        lista.appendChild(li);
        atualizarSelect();
        document.getElementById("nome").value = "";
        document.getElementById("endereco").value = "";
      } else {
        alert("Preencha todos os campos!");
      }
    }
  </script>
</body>
</html>
