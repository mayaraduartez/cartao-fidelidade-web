<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <title>Funcionários Cadastrados</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/css/style3.css" />
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css" />
  </head>
  <body>
    <div class="tela-funcionarios">
      <div class="cabecalho-funcionarios">
        <div class="logo-area">
          <img src="/images/logoRes.png" alt="Logo" />
        </div>
        <h1 class="titulo-funcionarios">Funcionários</h1>
      </div>

      <div class="box-formulario">
        <h2>Buscar Funcionários</h2>
        <form method="get" action="/admin/funcionarios/buscar">
          <input
            type="text"
            name="nome"
            class="input100"
            placeholder="Buscar por nome"
            value="<%= typeof nome !== 'undefined' ? nome : '' %>"
          />
          <input
            type="number"
            name="id"
            class="input100"
            placeholder="Buscar por ID"
            value="<%= typeof id !== 'undefined' ? id : '' %>"
          />
          <input
            type="text"
            name="grupo"
            class="input100"
            placeholder="Buscar por grupo"
            value="<%= typeof grupo !== 'undefined' ? grupo : '' %>"
          />

          <div class="btn-group-form">
            <button type="submit" class="login100-form-btn">
              Buscar
            </button>
            <button
              type="button"
              class="login100-form-btnlimpar-btn"
              onclick="window.location.href='/admin/listarFuncionarios'"
            >
              Limpar
            </button>
            <a
              href="/admin/Cadastrarfuncionarios"
              class="login100-form-btn btn-novo"
            >
              Novo Funcionário
            </a>
          </div>
        </form>
      </div>

      <div class="box-tabela">
        <h2>Funcionários Cadastrados</h2>
        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
            <tr>
              <th>ID</th>
              <th>Nome</th>
              <th>Sobrenome</th>
              <th>Grupo</th>
              <th>CPF</th>
              <th>Data de Nascimento</th>
              <th>Telefone</th>
              <th>Email</th>
              <th>Administrador</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% funcionarios.forEach(func => { %>
            <tr>
              <td><%= func.id %></td>
              <td><%= func.nome %></td>
              <td><%= func.sobrenome %></td>
              <td><%= func.Grupo ? func.Grupo.nome : "—" %></td>
              <td><%= func.cpf %></td>
              <td><%= func.data_nascimento %></td>
              <td><%= func.telefone %></td>
              <td><%= func.email %></td>
              <td><%= func.admin ? "Sim" : "Não" %></td>
              <td>
                <a
                  href="/admin/funcionarios/editar/<%= func.id %>"
                  class="btn-acao btn-editar"
                  >Editar</a
                >

                <form
                  action="/admin/funcionarios/excluir/<%= func.id %>"
                  method="POST"
                  style="display: inline"
                >
                  <button
                    type="submit"
                    class="btn-acao btn-excluir"
                    onclick="return confirm('Tem certeza que deseja excluir este funcionário?');"
                  >
                    Excluir
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <div class="text-center p-t-12">
            <a class="btn-voltar" href="/meuPerfil"> Voltar </a>
        </div>
      </div>
    </div>
  </body>
</html>
