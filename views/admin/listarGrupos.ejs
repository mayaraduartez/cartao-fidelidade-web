<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Grupos Cadastrados</title>
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/css/style3.css" />
  </head>
  <body>
    <div class="tela-funcionarios">
      <div class="cabecalho-funcionarios">
        <div class="logo-area">
          <img src="/images/logoRes.png" alt="Logo" />
        </div>
        <h1 class="titulo-funcionarios">Grupos Cadastrados</h1>
      </div>

      <!-- Formulário de busca -->
      <div class="box-formulario">
        <form method="get" action="/admin/grupos/buscar">
          <input
            type="text"
            name="nome"
            class="input100"
            placeholder="Digite o nome do grupo"
            value="<%= typeof nome !== 'undefined' ? nome : '' %>"
          />

          <div class="btn-group-form">
            <button type="submit" class="login100-form-btn">
              <i class="fa fa-search"></i> Buscar
            </button>
            <button
              type="button"
              class="login100-form-btnlimpar-btn"
              onclick="window.location.href='/admin/listarGrupos'"
            >
              <i class="fa fa-eraser"></i> Limpar
            </button>
            <a href="/admin/cadastrarGrupo" class="login100-form-btn">
              <i class="fa fa-plus"></i> Novo Grupo
            </a>
          </div>
        </form>
      </div>

      <!-- Tabela de grupos -->
      <div class="box-tabela">
        <!-- Mensagem de sucesso ou erro -->
        <% if (typeof msg !== 'undefined' && msg) { %> <% if (msgType ===
        'success') { %>
        <div class="msg-sucesso"><%= msg %></div>
        <% } else { %>
        <div class="msg-erro"><%= msg %></div>
        <% } %> <% } %>

        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
            <tr>
              <th>ID</th>
              <th>Nome do Grupo</th>
              <th>Área</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% grupos.forEach(grupo => { %>
            <tr>
              <td><%= grupo.id %></td>
              <td><%= grupo.nome %></td>
              <td><%= grupo.slug %></td>
              <td>
                <a
                  href="/admin/grupos/editar/<%= grupo.id %>"
                  class="btn-acao btn-editar"
                  >Editar</a
                >
                <form
                  action="/admin/grupos/excluir/<%= grupo.id %>"
                  method="POST"
                  style="display: inline"
                >
                  <button
                    type="submit"
                    class="btn-acao btn-excluir"
                    onclick="return confirm('Deseja realmente excluir este grupo?');"
                  >
                    Excluir
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <div class="text-center p-t-12">
          <a class="btn-voltar" href="/meuPerfil"> Voltar </a>
        </div>
      </div>
    </div>
  </body>
</html>
