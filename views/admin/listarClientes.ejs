<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <title>Clientes Cadastrados</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/css/style3.css" />
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css" />
  </head>
  <body>
    <div class="tela-funcionarios">
      <!-- Cabeçalho -->
      <div class="cabecalho-funcionarios">
        <div class="logo-area">
          <img src="/images/logoRes.png" alt="Logo" />
        </div>
        <h1 class="titulo-funcionarios">Clientes</h1>
      </div>

      <!-- Tabela de clientes -->
      <div class="box-tabela">
        <h2>Clientes Cadastrados</h2>
        <% if (!clientes || clientes.length === 0) { %>
          <p class="msg-nenhum-cliente">Nenhum cliente cadastrado.</p>
        <% } else { %>
          <table class="table table-striped table-bordered">
            <thead class="thead-dark">
              <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>CPF</th>
                <th>Data de Nascimento</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% clientes.forEach(cliente => { %>
              <tr>
                <td><%= cliente.id %></td>
                <td><%= cliente.nome %></td>
                <td><%= cliente.sobrenome %></td>
                <td><%= cliente.email %></td>
                <td><%= cliente.telefone %></td>
                <td><%= cliente.cpf %></td>
                <td><%= cliente.data_nascimento %></td>
                <td>
                  <a
                    href="/login/meuPerfil/<%= cliente.id %>"
                    class="btn-acao btn-editar"
                  >
                    Editar
                  </a>

                  <form
                    action="/admin/clientes/excluir/<%= cliente.id %>"
                    method="POST"
                    style="display: inline"
                  >
                    <button
                      type="submit"
                      class="btn-acao btn-excluir"
                      onclick="return confirm('Tem certeza que deseja excluir este cliente?');"
                    >
                      Excluir
                    </button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>

        <div class="text-center p-t-12">
          <a class="btn-voltar" href="/meuPerfil"> Voltar </a>
        </div>
      </div>
    </div>
  </body>
</html>
