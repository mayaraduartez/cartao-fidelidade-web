<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <title>Cadastrar Funcionário</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" type="image/png" href="/images/icons/favicon.ico" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/vendor/bootstrap/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/vendor/css-hamburgers/hamburgers.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="/vendor/select2/select2.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/css/util.css" />
    <link rel="stylesheet" type="text/css" href="/css/style2.css" />
  </head>
  <body>
    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">
          <div class="login100-pic js-tilt" data-tilt>
            <img src="/images/logoRes.png" alt="Logo" />
          </div>

          <form class="login100-form validate-form" method="post">
            <!-- Mensagem de erro -->
            <% if (typeof msg !== 'undefined' && msg) { %> <% if (msgType ===
            'success') { %>
            <div id="msg-sucesso"><%= msg %></div>
            <% } else { %>
            <div id="msg-erro"><%= msg %></div>
            <% } %> <% } %>

            <!-- Div para mensagens de erro -->
            <span class="login100-form-title"> Cadastro de Funcionário </span>
            <!--nome-->
            <div
              class="wrap-input100 validate-input"
              data-validate="Informe o nome"
            >
              <input
                class="input100"
                type="text"
                name="nome"
                placeholder="Nome"
                required
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-user" aria-hidden="true"></i>
              </span>
            </div>
            <!--sobrenome-->

            <div
              class="wrap-input100 validate-input"
              data-validate="Informe o sobrenome"
            >
              <input
                class="input100"
                type="text"
                name="sobrenome"
                placeholder="Sobrenome"
                required
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-user" aria-hidden="true"></i>
              </span>
            </div>

            <!--CPF-->
            <div
              class="wrap-input100 validate-input"
              data-validate="Informe o CPF"
            >
              <input
                class="input100"
                type="text"
                name="cpf"
                placeholder="CPF"
                required
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-envelope" aria-hidden="true"></i>
              </span>
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Informe a data de nascimento"
            >
              <input
                class="input100"
                type="date"
                name="data_nasc"
                placeholder="Data de Nascimento"
                required
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-envelope" aria-hidden="true"></i>
              </span>
            </div>

            <!--Telefone-->
            <div
              class="wrap-input100 validate-input"
              data-validate="Informe o telefone"
            >
              <input
                class="input100"
                type="text"
                name="telefone"
                placeholder="Telefone"
                required
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-envelope" aria-hidden="true"></i>
              </span>
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Informe o email"
            >
              <input
                class="input100"
                type="text"
                name="email"
                placeholder="Email"
                required
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-envelope" aria-hidden="true"></i>
              </span>
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Informe a senha"
            >
              <input
                class="input100"
                type="password"
                name="senha"
                placeholder="Senha"
                required
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Selecione o grupo"
            >
              <select class="input100" name="grupo">
                <option value="">Selecione um grupo</option>
                <% grupos.forEach(grupo => { %>
                <option name="grupo" value="<%= grupo.id %>">
                  <%= grupo.nome %>
                </option>
                <% }) %>
              </select>
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-users" aria-hidden="true"></i>
              </span>
            </div>
            <!--Botão-->
            <div class="container-login100-form-btn" id="btn-cadastrar1">
              <input
                type="submit"
                class="login100-form-btn"
                value="Cadastrar Funcionário"
              />
            </div>

            <div class="text-center p-t-12">
              <a class="btn-voltar1" href="/admmeuperfil"> Voltar </a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="/vendor/bootstrap/js/popper.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/vendor/select2/select2.min.js"></script>
    <script src="/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
      $(".js-tilt").tilt({
        scale: 1.1,
      });
    </script>
    <script src="/js/main.js"></script>
  </body>
</html>
